<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.allen.library.SuperTextView
        android:id="@+id/stv_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        stv:sCenterTextString=""
        stv:sDividerLineType="both"
        stv:sLeftTextString="更新时间:" />

    <com.allen.library.SuperTextView
        android:id="@+id/stv_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sCenterTextString=""
        stv:sDividerLineType="both"
        stv:sLeftTextString="总资产数量:" />

    <Button
        android:id="@+id/btn_updata"
        android:layout_width="@dimen/dp_340"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/selector_finish_bg"
        android:text="更新"
        android:textColor="@color/gray"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/txt_tips"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="20dp" />


</LinearLayout>