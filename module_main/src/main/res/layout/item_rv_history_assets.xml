<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_history_item"
        android:orientation="horizontal"
        android:padding="@dimen/dp_30">

        <ImageView
            android:id="@+id/img_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_yes_big" />

        <TextView
            android:id="@+id/tv_state"
            android:gravity="center"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:text="待授权" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/tv_id"
                style="@style/TextView_commom"
                stv:sCenterTextString="2121"
                stv:sLeftTextString="RFID编号：" />



            <com.allen.library.SuperTextView
                android:id="@+id/stv_belongDept"
                style="@style/TextView_commom"
                stv:sCenterTextString=""
                stv:sLeftTextString="所属部门：" />

            <com.allen.library.SuperTextView
                android:id="@+id/stv_assetUser"
                style="@style/TextView_commom"
                stv:sCenterTextString=""
                stv:sLeftTextString="当前责任人：" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>